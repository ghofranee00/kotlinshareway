<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <!-- App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Donor Home"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_notifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_notification"
            android:contentDescription="Notifications" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile" />

        <ImageButton
            android:id="@+id/btn_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_logout"
            android:contentDescription="Logout" />

    </LinearLayout>

    <!-- ScrollView for main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Donor / Association ! ðŸ‘‹"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your generosity makes a difference. Join our community of committed donors and help those in need."
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Help Now Button -->
                <Button
                    android:id="@+id/btn_help_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help Now - View Posts ðŸŽ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/purple_500"
                    android:textColor="@android:color/white"
                    android:paddingVertical="12dp" />

            </LinearLayout>

            <!-- Statistics Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Impact ðŸ“Š"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Donations made -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_donations_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Donations Made"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- People helped -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_people_helped"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="People Helped"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Help Types Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available Help Types ðŸŽ¯"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="16dp" />

                <!-- Food -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ Food"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/tv_food_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:background="#E8F5E8"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Health -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ¥ Health"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/tv_health_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Education -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“š Education"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/tv_education_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:background="#FFF3E0"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Clothing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ‘• Clothing"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/tv_clothing_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:background="#F3E5F5"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Housing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ  Housing"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/tv_housing_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:background="#E3F2FD"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Money -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’° Money"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/tv_money_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:background="#FFF9C4"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Associations Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="4dp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We partner with various charitable organizations to maximize our impact. Together, we work to provide assistance where it's needed most."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join us in this humanitarian mission and be the change you want to see in the world."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:lineSpacingExtra="4dp"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:elevation="8dp">

        <Button
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Home"
            android:background="@android:color/transparent"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nav_posts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Posts"
            android:background="@android:color/transparent"
            android:textColor="#666" />

        <Button
            android:id="@+id/nav_donations"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Donations"
            android:background="@android:color/transparent"
            android:textColor="#666" />

        <Button
            android:id="@+id/nav_about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="About Us"
            android:background="@android:color/transparent"
            android:textColor="#666" />

    </LinearLayout>

</LinearLayout>